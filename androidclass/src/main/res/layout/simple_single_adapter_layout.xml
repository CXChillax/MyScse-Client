<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_fifty_five">

        <TextView
            android:id="@+id/simple_single_adapter_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen_ten"
            android:gravity="center_vertical" />

        <View
            android:id="@+id/simple_single_adapter_icon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dimen_fifteen"
            android:layout_height="@dimen/dimen_fifteen"
            android:layout_marginEnd="@dimen/dimen_ten"/>
    </RelativeLayout>

</LinearLayout>