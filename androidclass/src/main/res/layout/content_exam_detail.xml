<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--模拟一个toolbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_fifty_five"
        android:background="@color/colorPrimary"
        android:paddingStart="@dimen/dimen_ten"
        android:paddingEnd="@dimen/dimen_ten">

        <View
            android:id="@+id/exam_detail_back_icon"
            android:layout_width="@dimen/dimen_twenty"
            android:layout_height="@dimen/dimen_twenty"
            android:layout_gravity="start|center_vertical"/>
        <TextView
            android:id="@+id/exam_detail_toolbar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_sixteen"/>
    </LinearLayout>
    <!--课程考试具体信息-->
    <ListView
        android:id="@+id/exam_detail_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </ListView>
</LinearLayout>